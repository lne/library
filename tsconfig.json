{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "target": "esnext",
    "types": [],
    "paths": {
      "@zxing/library": [
        "./index.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}